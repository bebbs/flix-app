<%= form_for([@movie, @review]) do |f| %>
<%= render "shared/errors", object: @review %>
	<fieldset>
		<ol>
			<li class = "required">
				<%= f.label :name %>
				<%= f.text_field :name, size: 40 %>
			</li>
			<li class = "required stars">
				<%= f.label :stars %>
				<%= f.select :stars, Review::STARS, prompt: "Pick one" %>
			</li>
			<li class = "required">
				<%= f.label :comment %>
				<%= f.text_area :comment, cols: 60, placeholder: "What did you think?" %>
			</li>
		</ol>
		<p>
			<%= f.submit 'Post Review' %>
			<%= link_to "Cancel", @movie, class: 'button' %>
	</fieldset>
<% end %>